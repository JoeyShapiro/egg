program = { SOI ~ statement* ~ EOI }
statement = { print_statement | for_statement | standalone_identifier | expression }
print_statement = { "print" ~ expression }
for_statement = { "for" ~ identifier ~ "in" ~ expression ~ "by" ~ expression ~ block }
block = { "{" ~ statement* ~ "}" }
expression = { string | number | identifier | binary_operation }
binary_operation = { term ~ (operator ~ term)+ }
term = { string | number | identifier | "(" ~ expression ~ ")" }
operator = { "+" | "-" | "*" | "/" }
string = ${ "\"" ~ inner_string ~ "\"" }
inner_string = @{ char* }
char = {
    !("\"" | "\\") ~ ANY
    | "\\" ~ ("\"" | "\\" | "/" | "b" | "f" | "n" | "r" | "t")
    | "\\" ~ ("u" ~ ASCII_HEX_DIGIT{4})
}
number = @{ ASCII_DIGIT+ }
identifier = @{ ASCII_ALPHA ~ (ASCII_ALPHANUMERIC | "_")* }
standalone_identifier = @{ identifier }
WHITESPACE = _{ " " | "\t" | "\r" | "\n" }